%h1=t "Listing roles"

%table
  %tr
    %th=t "Name"
    %th=t "Scope"
    %th=t "assign_to_owner"
    %th
    %th
    %th

  - @roles.each do |role|
    %tr
      %th= link_to role.name, role
      %th= role.scope
      %th= role.assign_to_owner
